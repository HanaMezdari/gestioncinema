{% extends 'base.html.twig' %}

{% block title %}Publicite index{% endblock %}

{% block body %}
    <h1>Publicite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Date</th>
                <th>Image</th>
                <th>Discription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicite in publicites %}
            <tr>
                <td>{{ publicite.id }}</td>
                <td>{{ publicite.prix }}</td>
                <td>{{ publicite.date ? publicite.date|date('Y-m-d') : '' }}</td>
                <td>{{ publicite.image }}</td>
                <td>{{ publicite.discription }}</td>
                <td>
                    <a href="{{ path('publicite_show', {'id': publicite.id}) }}">show</a>
                    <a href="{{ path('publicite_edit', {'id': publicite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('publicite_new') }}">Create new</a>
{% endblock %}
