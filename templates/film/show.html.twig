{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Nom_de_film</th>
                <td>{{ film.nomDeFilm }}</td>
            </tr>
            <tr>
                <th>Realisateur</th>
                <td>{{ film.Realisateur }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ film.image }}</td>
            </tr>
            <tr>
                <th>Discription</th>
                <td>{{ film.discription }}</td>
            </tr>
            <tr>
                <th>Audience</th>
                <td>{{ film.audience }}</td>
            </tr>
            <tr>
                <th>Prix_film</th>
                <td>{{ film.prixFilm }}</td>
            </tr>
            <tr>
                <th>Dure_film</th>
                <td>{{ film.dureFilm ? film.dureFilm|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('film_index') }}">back to list</a>

    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
